<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/smenu_background"
    android:gravity="bottom"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp" >

        <ImageView
            android:id="@+id/smenu_face"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/person" />

        <TextView
            android:id="@+id/smenu_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="我的昵称"
            android:textColor="@color/blue_text"
            android:textSize="@dimen/textsize_title" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingBottom="2dp"
        android:paddingLeft="20dp"
        android:paddingTop="2dp"
        android:text="我的互邀"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/textsize_text" />

    <TextView
        android:id="@+id/smenu_myevent"
        style="@style/smenu_item"
        android:drawableLeft="@drawable/selector_smenu_myevent"
        android:text=" 我的活动" />

    <View style="@style/line_gray_h" >
    </View>

    <TextView
        android:id="@+id/smenu_myintivation"
        style="@style/smenu_item"
        android:drawableLeft="@drawable/selector_smenu_myintivation"
        android:text=" 我的邀请" />

    <View style="@style/line_gray_h" >
    </View>

    <TextView
        android:id="@+id/smenu_mytopic"
        style="@style/smenu_item"
        android:drawableLeft="@drawable/selector_smenu_mytopic"
        android:text=" 我的话题" />

    <View style="@style/line_gray_h" >
    </View>

    <TextView
        android:id="@+id/smenu_myfriend"
        style="@style/smenu_item"
        android:drawableLeft="@drawable/selector_smenu_myfriend"
        android:text=" 我的好友" />

    <View style="@style/line_gray_h" >
    </View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/smenu_mymessage"
            style="@style/smenu_item"
            android:drawableLeft="@drawable/selector_smenu_mymessage"
            android:text=" 我的消息" />
        <TextView 
            android:id="@+id/tv_message_num"
            style="@style/textview_superscript"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:visibility="invisible" />
    </RelativeLayout>

    <View style="@style/line_gray_h" >
    </View>

    <TextView
        android:id="@+id/smenu_myorder"
        style="@style/smenu_item"
        android:drawableLeft="@drawable/selector_smenu_myorder"
        android:text=" 我的订单" />

    <View style="@style/line_gray_h" >
    </View>

    <TextView
        android:id="@+id/smenu_myfund"
        style="@style/smenu_item"
        android:drawableLeft="@drawable/selector_smenu_myfund"
        android:text=" 我的资金" />

    <View style="@style/line_gray_h" >
    </View>

    <TextView
        android:id="@+id/smenu_set"
        style="@style/smenu_item"
        android:drawableLeft="@drawable/selector_smenu_set"
        android:text=" 设置" />

</LinearLayout>