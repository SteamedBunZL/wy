<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/pop_item_height" >
    <TextView
        android:id="@+id/item_pop_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:background="@drawable/selector_button_tran_gray"
        android:singleLine="true"
        android:textSize="@dimen/textsize_text" />
	<View
	    android:id="@+id/item_pop_line_h"
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:layout_marginLeft="5dp"
	    android:layout_marginRight="5dp"
	    android:layout_alignParentBottom="true"
	    android:background="@drawable/line_dash_h" />
	<View
	    android:id="@+id/item_pop_line_v"
	    android:layout_width="1dp"
	    android:layout_marginBottom="5dp"
	    android:layout_height="wrap_content"
	    android:layout_alignTop="@+id/item_pop_tv"
	    android:layout_alignBottom="@+id/item_pop_tv"
	    android:layout_alignParentRight="true"
	    android:background="@drawable/line_dash_v" />
</RelativeLayout>
