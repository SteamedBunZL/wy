<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rectangle_radius_white"
    android:orientation="horizontal"
    android:paddingBottom="10dp" >
	<FrameLayout
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content" >
	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:padding="10dp" >
	    
    <ImageView
        android:id="@+id/item_event_iv_pill"
        android:layout_width="@dimen/image_bill_width"
        android:layout_height="@dimen/image_height"
        android:scaleType="fitXY"
        android:src="@drawable/default_bill" />
	    
	</LinearLayout>    

    <ImageView
        android:id="@+id/item_event_iv_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/moevent" />
	</FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/item_event_ll_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/item_event_tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/infilling"
                android:textSize="@dimen/textsize_text" />

            <TextView
                android:id="@+id/item_event_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/infilling"
                android:textSize="@dimen/textsize_text" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_event_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/infilling"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/textsize_subtext" />

        <TextView
            android:id="@+id/item_event_tv_keyword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:text="@string/infilling"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/textsize_subtext" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:orientation="horizontal" >


            <TextView
                android:id="@+id/item_event_tv_addr"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:text="@string/infilling"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/textsize_subtext" />
            <TextView
                android:id="@+id/item_event_tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/infilling"
                android:textColor="@color/carmine_text"
                android:textSize="@dimen/textsize_subtext" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>