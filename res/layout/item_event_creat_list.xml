<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rectangle_radius_white"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/item_event_iv_pill"
        android:layout_width="@dimen/image_bill_width"
        android:layout_height="@dimen/image_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/default_bill" />

    <LinearLayout
        android:id="@+id/item_event_ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/item_event_iv_pill"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/item_event_tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/infilling"
            android:textSize="@dimen/textsize_button" />

        <TextView
            android:id="@+id/item_event_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@string/infilling"
            android:textSize="@dimen/textsize_button" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_event_ll_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_event_iv_pill"
        android:layout_alignLeft="@+id/item_event_ll_title"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/item_event_tv_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="@string/infilling"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/textsize_text" />

        <TextView
            android:id="@+id/item_event_tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/infilling"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/textsize_text" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_event_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/item_event_ll_category"
        android:layout_alignLeft="@+id/item_event_ll_title"
        android:layout_below="@+id/item_event_ll_title"
        android:gravity="center_vertical"
        android:text="@string/infilling"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/textsize_text" />

    <TextView
        android:id="@+id/item_event_tv_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/item_event_tv_time"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/item_event_tv_time"
        android:gravity="right"
        android:text="@string/infilling"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/textsize_text" />

    <TextView
        android:id="@+id/item_event_tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/item_event_ll_title"
        android:layout_below="@+id/item_event_ll_category"
        android:layout_marginTop="5dp"
        android:paddingBottom="5dp"
        android:text="@string/infilling"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/textsize_text" />

    <LinearLayout
        android:id="@+id/item_event_v_btn_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_event_tv_num"
        android:layout_margin="1px"
        android:background="@drawable/rectangle_radius_gray_bottom"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/item_event_tv_joiner_mgr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:singleLine="true"
            android:text="管理人员"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/textsize_text" />

        <View
            android:id="@+id/item_event_v_joiner_0"
            style="@style/line_gray_v"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp" />

        <View
            android:id="@+id/item_event_v_joiner_1"
            style="@style/line_white_v"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/item_event_tv_hide"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:singleLine="true"
            android:text="关闭展示"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/textsize_text" />

        <View
            android:id="@+id/item_event_v_hide_0"
            style="@style/line_gray_v"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp" />

        <View
            android:id="@+id/item_event_v_hide_1"
            style="@style/line_white_v"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/item_event_tv_upload_photo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:singleLine="true"
            android:text="上传照片"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/textsize_text" />

        <View
            style="@style/line_gray_v"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp" />

        <View
            style="@style/line_white_v"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/item_event_tv_valu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:singleLine="true"
            android:text="评分"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/textsize_text" />

        <View
            android:id="@+id/item_event_v_valu_0"
            style="@style/line_gray_v"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:visibility="gone" />

        <View
            android:id="@+id/item_event_v_value_1"
            style="@style/line_white_v"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:visibility="gone" />

        <View
            android:id="@+id/item_event_v_infill_0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone" />

        <View
            android:id="@+id/item_event_v_infill_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone" />

        <View
            android:id="@+id/item_event_v_infill_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>