<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rectangle_radius_white"
    android:paddingBottom="10dp"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/item_event_iv_pill"
        android:layout_width="@dimen/image_bill_width"
        android:layout_height="@dimen/image_height"
        android:scaleType="centerCrop"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/default_bill"
        android:layout_margin="10dp" />

    <ImageView
        android:id="@+id/item_event_iv_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/moevent" />

	<LinearLayout
	    android:id="@+id/item_event_ll_title"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_marginTop="10dp"
	    android:layout_marginRight="10dp"
	    android:layout_toRightOf="@id/item_event_iv_pill" >
	<TextView
	    android:id="@+id/item_event_tv_type"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/infilling"
        android:textSize="@dimen/textsize_text" />      
    <TextView
        android:id="@+id/item_event_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
	    android:text="@string/infilling"
        android:textSize="@dimen/textsize_text" />
	</LinearLayout>
    <TextView
        android:id="@+id/item_event_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_alignLeft="@+id/item_event_ll_title"
        android:layout_below="@+id/item_event_ll_title"
        android:textColor="@color/gray_text"
	    android:text="@string/infilling"
        android:textSize="@dimen/textsize_subtext" />

        <TextView
        android:id="@+id/item_event_tv_keyword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
	    android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_alignLeft="@+id/item_event_ll_title"
        android:layout_below="@+id/item_event_tv_time"
        android:singleLine="true"
        android:text="@string/infilling"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/textsize_subtext" />
    
    <TextView
        android:id="@+id/item_event_tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/item_event_tv_keyword"
        android:textColor="@color/carmine_text"
        android:textSize="@dimen/textsize_subtext"
	    android:text="@string/infilling" />

    <TextView
        android:id="@+id/item_event_tv_addr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_alignLeft="@+id/item_event_ll_title"
        android:layout_toLeftOf="@id/item_event_tv_distance"
        android:layout_below="@+id/item_event_tv_keyword"
        android:singleLine="true"
	    android:text="@string/infilling"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/textsize_subtext" />



</RelativeLayout>