<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rectangle_radius_white"
    android:paddingBottom="10dp"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/item_event_iv_pill"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/default_bill" />
    <ImageView
        android:id="@+id/item_event_iv_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:visibility="gone"
        android:src="@drawable/moevent" />
    <LinearLayout
        android:id="@+id/item_event_ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/item_event_iv_pill"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/item_event_tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[类型]"
            android:textSize="@dimen/textsize_button" />

        <TextView
            android:id="@+id/item_event_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@string/infilling"
            android:textSize="@dimen/textsize_button" />
    </LinearLayout>

	<LinearLayout
	    android:id="@+id/item_event_ll_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/item_event_ll_title"
        android:layout_alignBottom="@+id/item_event_iv_pill"
	    android:orientation="horizontal" >
	    
    <TextView
        android:id="@+id/item_event_tv_join_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text="@string/infilling"
        android:textColor="@color/gray_text" />
    
    <TextView
        android:id="@+id/item_event_tv_pv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/infilling"
        android:layout_marginRight="10dp"
        android:textColor="@color/gray_text" />
    <TextView
        android:id="@+id/item_event_tv_remark_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/infilling"
        android:textColor="@color/gray_text" />
	</LinearLayout>
    <TextView
        android:id="@+id/item_event_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/item_event_ll_title"
        android:layout_below="@+id/item_event_ll_title"
        android:layout_above="@+id/item_event_ll_category"
        android:gravity="center_vertical"
        android:text="@string/infilling"
        android:textColor="@color/gray_text" />
</RelativeLayout>