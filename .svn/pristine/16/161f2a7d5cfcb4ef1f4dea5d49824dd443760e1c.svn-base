<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:background="@drawable/rectangle_has_stroke_white"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp" >

        <TextView
            android:id="@+id/itemfree_label_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="时间："
            android:textSize="@dimen/textsize_button" />

        <TextView
            android:id="@+id/itemfree_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/itemfree_label_time"
            android:layout_toRightOf="@id/itemfree_label_time"
            android:singleLine="true"
            android:textSize="@dimen/textsize_subtext"
            android:textColor="@color/gray_text" />

        <TextView
            android:id="@+id/itemfree_label_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/itemfree_label_time"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:text="宣言："
            android:textSize="@dimen/textsize_button" />

        <TextView
            android:id="@+id/itemfree_tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/itemfree_label_time"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@id/itemfree_label_content"
            android:textColor="@color/gray_text" />
    </RelativeLayout>

    <View
        android:id="@+id/itemfree_color"
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:background="@color/blue_button" />

</LinearLayout>