<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/page_rl_title"
        style="@style/page_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageButton
            android:id="@+id/page_btn_back"
            style="@style/page_backbtn" />

        <TextView
            android:id="@+id/page_tv_title"
            style="@style/page_title"
            android:text="关于互邀" />
    </RelativeLayout>

    <TextView
        android:id="@+id/about_tv_whoyao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="28dp"
        android:textColor="@color/blue_text"
        android:text="互邀" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/about_tv_whoyao"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:src="@drawable/icon" />

    <TextView
        android:id="@+id/tv_fix_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/about_tv_whoyao"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:hint="互邀Android版 版本：V" />
    <TextView
        android:id="@+id/tv_type_number"
        android:layout_toRightOf="@id/tv_fix_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/about_tv_whoyao"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:hint="@string/version_name" />

    <TextView
        android:id="@+id/about_tv_copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:textSize="10sp"
        android:hint="Copyright © 2012 Reuniontech Co.Ltd All Rights Reserved." />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/about_tv_copyright"
        android:layout_centerHorizontal="true" >
    <TextView
        android:id="@+id/about_tv_service_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blue_text"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"       
        android:text="客服电话" />
    <TextView
        android:id="@+id/about_tv_licence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blue_text"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"  
        android:text=" | 隐私政策 | " />
    <TextView
        android:id="@+id/about_tv_service_weibo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blue_text"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"  
        android:text="官方微博" />
    </LinearLayout>


</RelativeLayout>