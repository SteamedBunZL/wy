<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_radius_white"
    android:orientation="horizontal" >

    <FrameLayout
        android:id="@+id/rl_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp" >

            <ImageView
                android:id="@+id/iv_head"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/default_face" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_message_num"
            style="@style/textview_superscript"
            android:layout_gravity="right|top"
            android:visibility="gone" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_private_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="@string/infilling"
                android:textSize="@dimen/textsize_text" />

            <TextView
                android:id="@+id/tv_private_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/infilling"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/textsize_subtext" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_private_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:singleLine="true"
            android:layout_marginTop="5dp"
            android:text="@string/infilling"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/textsize_subtext" />
    </LinearLayout>

</LinearLayout>