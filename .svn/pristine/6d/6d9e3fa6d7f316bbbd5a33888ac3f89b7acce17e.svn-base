<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
	<View
	    android:id="@+id/item_pop_line_v"
	    android:layout_width="1dp"
	    android:layout_height="match_parent"
	    android:layout_alignTop="@+id/item_pop_tv"
	    android:layout_alignBottom="@+id/item_pop_tv"
	    android:layout_alignParentRight="true"
	    android:background="@color/gray_stroke" />
    <TextView
        android:id="@+id/item_pop_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:padding="11dp"
        android:background="@drawable/selector_tran_gray_background"
        android:singleLine="true"
        android:textSize="@dimen/textsize_text" />
</RelativeLayout>
