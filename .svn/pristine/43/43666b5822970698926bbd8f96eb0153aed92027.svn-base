<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_radius_white_gary"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/user_iv_face"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:scaleType="fitXY"
        android:src="@drawable/default_face" />

    <ImageView
        android:id="@+id/user_iv_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/arrow_right" />

    <TextView
        android:id="@+id/user_tv_invert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/user_iv_arrow"
        android:background="@drawable/selector_button_blue"
        android:paddingBottom="3dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="3dp"
        android:text="发邀请"
        android:textSize="@dimen/textsize_text"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/user_tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/user_iv_face"
        android:layout_toLeftOf="@+id/user_iv_arrow"
        android:text="@string/infilling"
        android:textSize="@dimen/textsize_subtext"
        android:textColor="@color/carmine_text" />

    <TextView
        android:id="@+id/user_tv_nick"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_toRightOf="@+id/user_iv_face"
        android:layout_toLeftOf="@+id/user_tv_invert"
        android:singleLine="true"
        android:text="@string/infilling"
        android:textSize="@dimen/textsize_text" />

    <TextView
        android:id="@+id/user_tv_tag"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/user_iv_face"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_toRightOf="@+id/user_iv_face"
        android:layout_toLeftOf="@+id/user_tv_distance"
        android:singleLine="true"
        android:textSize="@dimen/textsize_subtext"
        android:textColor="@color/gray_text"
        android:hint="@string/hint_other_tag" />

    <TextView
        android:id="@+id/user_tv_age_sex"
        android:layout_width="wrap_content"
        android:layout_height="18dip"
        android:layout_alignLeft="@+id/user_tv_nick"
        android:layout_centerVertical="true"
        android:background="@drawable/sex_man"
        android:gravity="center"
        android:text="@string/infilling"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/textsize_subtext" />

</RelativeLayout>