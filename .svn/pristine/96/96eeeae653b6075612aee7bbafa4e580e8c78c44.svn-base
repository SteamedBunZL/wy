<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_radius_white" >

    <RelativeLayout
        android:id="@+id/rl_image"
        android:layout_width="80dp"
        android:padding="5dp"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="@dimen/image_face_width"
            android:layout_height="@dimen/image_height"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:src="@drawable/default_user_face" />

       
        <TextView
            android:id="@+id/tv_message_num"
            style="@style/textview_superscript"
            android:layout_alignParentRight="true"
            android:visibility="invisible"
           />
         
    </RelativeLayout>
    <TextView 
        android:id="@+id/tv_private_title"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textsize_text"
        android:text="天下大同"
        android:singleLine="true"
        android:layout_toRightOf="@id/rl_image"
        android:layout_marginTop="13dp"
        />
    <TextView 
        android:id="@+id/tv_private_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textsize_subtext"
        android:textColor="@color/gray_text"
        android:layout_below="@id/tv_private_title"
        android:text="周末出去玩吧？"
        android:singleLine="true"
        android:layout_toRightOf="@id/rl_image"
        android:layout_marginTop="6dp"
        />
    <TextView 
        android:id="@+id/tv_private_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textsize_text"
        android:textColor="@color/gray_text"
        android:text="3.5 18:00"
        android:layout_alignParentRight="true"
        android:layout_margin="13dp"
        />

</RelativeLayout>