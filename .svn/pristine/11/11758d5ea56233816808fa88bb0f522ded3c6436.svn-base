<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_radius_white_gary"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/user_iv_face"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:scaleType="fitXY"
        android:src="@drawable/default_user_face" />

    <ImageView
        android:id="@+id/user_iv_honesty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@+id/cb_single"
        android:paddingBottom="3dp"
        android:paddingLeft="5dp"
        android:paddingTop="3dp"
        android:src="@drawable/selector_state_honesty" />

    <ImageView
        android:id="@+id/user_iv_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/user_iv_honesty"
        android:paddingBottom="3dp"
        android:paddingLeft="5dp"
        android:paddingTop="3dp"
        android:src="@drawable/selector_state_mobile" />

    <ImageView
        android:id="@+id/user_iv_free"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/user_iv_mobile"
        android:paddingBottom="3dp"
        android:paddingLeft="5dp"
        android:paddingTop="3dp"
        android:src="@drawable/selector_state_free" />

    <TextView
        android:id="@+id/cb_single"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:drawableRight="@drawable/selector_checkbox_carmine"
        android:paddingLeft="5dp"
        android:paddingTop="3dp"
        />

    <TextView
        android:id="@+id/user_tv_nick"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_toLeftOf="@+id/user_iv_free"
        android:layout_toRightOf="@+id/user_iv_face"
        android:singleLine="true"
        android:text="@string/infilling"
        android:textSize="@dimen/textsize_text"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/user_tv_tag"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/user_iv_face"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_toLeftOf="@+id/user_tv_distance"
        android:layout_toRightOf="@+id/user_iv_face"
        android:hint="@string/hint_other_tag"
        android:singleLine="true"
        android:text="@string/infilling"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/textsize_subtext" />

    <TextView
        android:id="@+id/user_tv_age_sex"
        android:layout_width="wrap_content"
        android:layout_height="18dip"
        android:layout_alignLeft="@+id/user_tv_nick"
        android:layout_centerVertical="true"
        android:background="@drawable/sex_man"
        android:gravity="center"
        android:text="@string/infilling"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/textsize_subtext" />

</RelativeLayout>