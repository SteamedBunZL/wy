<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background"
    android:orientation="vertical" >
    
<RelativeLayout
        android:id="@+id/page_title"
        style="@style/page_titlebar"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageButton style="@style/page_backbtn"
            android:id="@+id/page_btn_back" />

        <TextView
            style="@style/page_title"
            android:text="修改签名" />
    </RelativeLayout>

<EditText
    android:id="@+id/setcontent_et"
    android:layout_below="@id/page_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="5dp"
    android:gravity="left|top"
    android:lines="5"
    android:textSize="@dimen/textsize_eidt"
    android:background="@drawable/rectangle_radius_white" >
</EditText>

<TextView
    android:id="@+id/setcontent_tv_num"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@+id/setcontent_et"
    android:layout_alignRight="@+id/setcontent_et"
    android:layout_margin="5dp"
    android:textColor="@color/gray_text"
    android:text="0/30" />

<Button
    android:id="@+id/setcontent_btn_enter"
    style="@style/button_big"
    android:layout_below="@+id/setcontent_et"
    android:text="保存" />

</RelativeLayout>
