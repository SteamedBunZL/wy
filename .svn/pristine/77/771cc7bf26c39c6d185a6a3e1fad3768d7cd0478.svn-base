<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/item_topic_remark_iv_face"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_marginLeft="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/default_face" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/item_topic_remark_tv_nick"
            style="@style/textview_text"
            android:textColor="@color/blue_text" />

        <TextView
            android:id="@+id/item_topic_remark_tv_time"
            style="@style/textview_subtext" />

        <TextView
            android:id="@+id/item_topic_remark_tv_content"
            style="@style/textview_text"
            android:singleLine="false" />
    </LinearLayout>

</LinearLayout>