<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingBottom="10dp"
    android:orientation="horizontal" >
    <TextView
        android:id="@+id/place_sub_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="09:00-10:00" />
    <TextView
        android:id="@+id/place_sub_tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_marginLeft="10dp"
        android:text=" 室内 " />
    <TextView
        android:id="@+id/place_sub_tv_price"
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="wrap_content"
        android:textColor="@color/red_text"
        android:layout_marginLeft="5dp"
        android:singleLine="true"
        android:text="￥45" />
    <TextView
        android:id="@+id/place_sub_tv_oprice"
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="￥55" />
    <TextView
        android:id="@+id/place_sub_tv_count"
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="剩999块" />
    <Button
        android:id="@+id/place_sub_btn_order"
        android:layout_width="0dp"
        android:layout_weight="4"
        android:gravity="center"
        android:singleLine="true"
        android:layout_marginLeft="2dp"
        android:background="@drawable/selector_button_orange"
        android:layout_height="@dimen/item_sub_height"
        android:textColor="@android:color/white"
        android:text="预订" />

</LinearLayout>